{
    "ditransitive_action": {
        "description": "Find ditransitive actions (subject gives object to recipient)",
        "pattern": [
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]},
            {"mv_type": "directed_relation", "relation_type": "nsubj", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["VERB"]},
            {"mv_type": "directed_relation", "relation_type": "dobj", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]},
            {"mv_type": "directed_relation", "relation_type": "iobj", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]}
        ]
    },
    "complement_clause": {
        "description": "Find complement clauses (complex predicates)",
        "pattern": [
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]},
            {"mv_type": "directed_relation", "relation_type": "nsubj", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["VERB"]},
            {"mv_type": "directed_relation", "relation_type": "ccomp", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["VERB"]}
        ]
    },
    "transfer_event": {
        "description": "Find transfer events (giving, selling, etc.)",
        "pattern": [
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]},
            {"mv_type": "directed_relation", "relation_type": "nsubj", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["VERB"], "lemma": ["give", "sell", "transfer", "hand", "pass"]},
            {"mv_type": "directed_relation", "relation_type": "dobj", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]}
        ]
    },
    "causal_chain": {
        "description": "Find causal chains: A causes B, B causes C",
        "pattern": [
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]},
            {"mv_type": "directed_relation", "relation_type": "nsubj", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["VERB"], "lemma": ["cause", "lead", "result", "trigger"]},
            {"mv_type": "directed_relation", "relation_type": "dobj", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]},
            {"mv_type": "directed_relation", "relation_type": "nsubj", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["VERB"]}
        ]
    },
    "complex_predicate_structure": {
        "description": "Find complex predicate structures using undirected relations",
        "pattern": [
            {"mv_type": "undirected_relation", "relation_type": "predicate"}
        ]
    },
    "hierarchical_relation": {
        "description": "Find hierarchical relations (metavertex referencing other relations)",
        "pattern": [
            {"mv_type": "directed_relation"},
            {"mv_type": "directed_relation", "requires_reference": true}
        ]
    }
}
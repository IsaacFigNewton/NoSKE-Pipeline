{
    "causality": {
        "description": "Find causal relationships: Subject -> Action -> Object",
        "pattern": [
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]},
            {"mv_type": "directed_relation", "relation_type": "nsubj", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["VERB", "AUX"]},
            {"mv_type": "directed_relation", "relation_type": "dobj", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]}
        ]
    },
    "temporal_sequence": {
        "description": "Find temporal sequences of events",
        "pattern": [
            {"mv_type": "atomic", "pos": ["VERB"]},
            {"mv_type": "directed_relation", "relation_type": "advcl", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["VERB"]}
        ]
    },
    "quality_attribution": {
        "description": "Find quality/property attributions to entities",
        "pattern": [
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]},
            {"mv_type": "directed_relation", "relation_type": "amod", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["ADJ"]}
        ]
    },
    "spatial_location": {
        "description": "Find spatial location relationships",
        "pattern": [
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]},
            {"mv_type": "directed_relation", "relation_type": "nmod", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN", "ADV"]}
        ]
    },
    "entity_classification": {
        "description": "Find entity type classifications",
        "pattern": [
            {"mv_type": "atomic", "pos": ["PROPN"]},
            {"mv_type": "directed_relation", "relation_type": "has_entity_type", "requires_reference": true}
        ]
    },
    "quantified_entity": {
        "description": "Find quantified entities",
        "pattern": [
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]},
            {"mv_type": "directed_relation", "relation_type": "nummod", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["NUM", "DET"]}
        ]
    },
    "agent_action_patient": {
        "description": "Find agent-action-patient relationships",
        "pattern": [
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]},
            {"mv_type": "directed_relation", "relation_type": "nsubj", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["VERB"]},
            {"mv_type": "directed_relation", "relation_type": "dobj", "requires_reference": true},
            {"mv_type": "atomic", "pos": ["NOUN", "PROPN"]}
        ]
    }
}